<script>

function PlayMusic(url) {
    
    document.getElementById("player").innerHTML = "<iframe id='ytplayer' type='text/html' width='0' height='0' src='http://www.youtube.com/embed/" + url + "?autoplay=1&autoplay=1&loop=1&playlist=" + url + "'  frameborder='0'/>";
    
}

function StopMusic() {
    document.getElementById("player").innerHTML = "";
}


  


</script>

