  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><a href="?sort=<%= song.category %>"><%= song.category %></a></td>
        <td><button type="button" onclick="PlayMusic('<%= song.youtube %>')">Play</button></td>
        <td><button type="button" onclick="StopMusic()">Stop</button></td>
        <td><%= link_to 'View', song %></td>   
        <td><%= link_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
